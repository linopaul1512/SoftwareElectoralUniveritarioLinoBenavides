{% extends 'baseAdministrador.html.jinja' %}

{% block content %}

<h1 class="titulo"> {% block title %} Ingrese un nuevo candidato {% endblock %}</h1>

<form action="{{ url_for('crear_candidato_post') }}" method="post" enctype="multipart/form-data">
    
    <div>
        <label for="IdUsuario">Usuario que se postula:</label>
        <select name="IdUsuario" id="IdUsuario" >
            {% for user in Users %}
                <option value="{{ user.CI }}">{{ user.Nombres }}</option>
            {% endfor %}
        </select>
    </div>

    <div>
        <label for="IdFrente">Frente al que se postula:</label>
        <select name="IdFrente" id="IdFrente">
            {% for front in Fronts %}
                <option value="{{ front.IdFrente }}">{{ front.Nombre }}</option>
            {% endfor %}
        </select>
    </div>

    <div>
        <label for="IdEleccion">Elecci√≥n en la que se postula:</label>
        <select name="IdEleccion" id="IdEleccion" required>
            {% for election in Elections %}
                <option value="{{ election.Id_Eleccion }}">{{ election.Nombre }}</option>
            {% endfor %}
        </select>
    </div>


    <input type="submit" value="Submit">
</form>

{% endblock %}
